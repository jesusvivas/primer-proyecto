---
import { Icon } from 'astro-icon/components'
---


<header>
  <nav class="menu">

    <div class="logo">
      <Icon name={"icono-gym"} width={15} height={15} />
      <a href="/"><p>FitLife Gym</p></a>
    </div>

    <div class="enlaces" id="enlaces">
      <a href="#clases">Clases</a>
      <a href="#horarios">Horario</a>
      <a href="/gallery">Galeria</a>
      <a href="/ubication">Ubicaciones</a>
      <a href="#contacto">Contacto</a>
      <a href="/sign-up"><button>Incr√≠bete ahora</button></a>
    </div>
    <div id="menu">
      <Icon name={"menu"} width={25} height={25} />
    </div>
  </nav>
</header>

<style>
    .menu {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 60px;
    }


    .logo {
      display: flex;
      gap: 8px;
      align-items: center;
      font-weight: bold;
      font-size: 19px;
    }

    .enlaces {
      display: flex;
      gap: 32px;
      align-items: center;
    }
    @media (max-width:768px) {
      .enlaces {
        position:absolute;
        top:60px;
        flex-direction: column;
        width: 100%;
        z-index: 100;
        background-color: #221111;
        left: -100%;
        padding: 10px 0px 30px 0;
      }
      
    }

    .enlaces.show {
      left: 0;
    }

    button  {
      background-color:#F21616;
      padding: 8px 24px;
      color: #ffff;
      border-radius: 5px;
      font-weight: bold;
      transition: background .3s ease-in-out;
      cursor: pointer;
    }
    button:hover {
      background-color: #780808;

    }

    #menu {
      display: none;
    }
    @media (max-width:768px) {
      #menu {
        display: flex;
      }
      
    }
</style>


<script>

  document.getElementById("menu")?.addEventListener("click", function () {
    document.getElementById("enlaces")?.classList.toggle("show")
  })


</script>
