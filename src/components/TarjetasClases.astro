---
interface Props{
    title: string
    text: string
    image: string
}

const {title,text,image} = Astro.props
---

<div class="container">
    <img src={image} alt="imagen de la clase">
    <div class="text">
        <h3>{title}</h3>
        <p>{text}</p>
    </div>
</div>



<style>
    img {
        border-radius: 5px;
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .text {
        padding: 20px 0;
    }

    h3 {
        font-size: 17px;
        font-weight: 600;
    }

    p {
        font-size: 13px;
        font-weight: 500;
        padding: 0 20px 0 0;
        color: #AC7B7B;
    }

</style>