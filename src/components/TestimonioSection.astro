---
import { Icon } from 'astro-icon/components'

interface Props{
    name: string
    time: string
    review: string
    image: string
}

const {name,time,review,image} = Astro.props


---


<div class="container">
    <div class="title">
        <div class="img">
        <img src={image} alt="icono">
        </div>
        <div class="name">
            <h3>{name}</h3>
            <p>{time}</p>
        </div>
    </div>
    <div class="review">
        <Icon name={"star-review"} width={30} height={30}/>
        <Icon name={"star-review"} width={30} height={30}/>
        <Icon name={"star-review"} width={30} height={30}/>
        <Icon name={"star-review"} width={30} height={30}/>
        <Icon name={"star-review"} width={30} height={30}/>
    </div>
    <p>{review}</p>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
    }

    .img {
        display: flex;
        width: 50px;
        height: 50px;
        padding: 3px;
    }

    .title {
        display: flex;
        
    }

    .name {
        display: flex;
        flex-direction: column;
    }

    .review {
        display: flex;
        color: red;
    }

    p{
        padding: 0 0 20px 0;
    }

</style>