---
import Layout from "../layouts/Layout.astro";
import Jumbotron from "../components/Jumbotron.astro";
import CardPlanes from "../components/CardPlanes.astro";
import TarjetasClases from "../components/TarjetasClases.astro";
import ContactSection from "../components/ContactSection.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <Jumbotron />
  <section>
    <h2>Nuetros Planes</h2>
    <div>
      <CardPlanes title="Plan Básico" price={29} />
      <CardPlanes title="Plan Premium" price={49} />
      <CardPlanes title="Plan Elite" price={79} />
    </div>
  </section>
  <section>
    <h2>Nuestras Clases</h2>
    <div>
      <TarjetasClases
        title="Entrenamiento de Fuerza"
        text="Desarolla músculo y aumenta tu fuerza con nuestros entrenamientos intensivos."
      />
      <TarjetasClases
        title="Yoga y Flexibilidad"
        text="Mejora tu flexibilidad y encuentra la paz interior con nuestras clases de yoga."
      />
      <TarjetasClases
        title="Levantamiento de Pesas"
        text="Alcanza tus Máximos con el apoyo de nuestros entrenadores expertos. "
      />
    </div>
  </section>

  <ContactSection />
  
</Layout>
